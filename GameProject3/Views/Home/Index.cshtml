@model GameProject3.Models.Player

@{
    ViewBag.Title = "Home Page";
}
<script>
 var wood = @Model.wood
    var gatherStrength = @Model.gatherStrength;
    var lumberHutCost = @Model.lumberHutCost;
    var lumberHut = @Model.lumberHut;
    var stoneHut = @Model.stoneHut;
    var stoneGatherStrength = @Model.stoneGatherStrength;
    var stone = @Model.stone;
    var stoneHutCost = @Model.stoneHutCost;
    var stoneDiv = document.getElementById("stoneHidden");


    function gatherWood(){
        wood += 1 * gatherStrength;
        update();
    }
    function gatherStone() {
        stone += 1 * stoneGatherStrength;
        update();
    }

    function buildLumberHut() {
        if (wood >= lumberHutCost) {
            wood -= lumberHutCost;
            lumberHut++;
            gatherStrength++;
            lumberHutCost *= 1.5;
            update();
        }
    }
    function update() {
        document.getElementById("wood").innerHTML = wood;
        document.getElementById("lumberHutCost").innerHTML = lumberHutCost;
        document.getElementById("lumberHut").innerHTML = lumberHut;
        document.getElementById("stone").innerHTML = stone;
        document.getElementById("stoneHut").innerHTML = stoneHut;
        if (wood > 75 && stoneHidden.hidden == true) {
            document.getElementById("stoneHidden").hidden = false;
        }
    }
    function buildStoneHut() {
        if (wood >= stoneHutCost) {
            wood -= stoneHutCost;
            stoneHut++;
            stoneGatherStrength++;
            stoneHutCost *= 1.75;
            update();
        }

    }
    document.writeln(@Model.wood);
    document.writeln(@Model.gatherStrength);
</script>


